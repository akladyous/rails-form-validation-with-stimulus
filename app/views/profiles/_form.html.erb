<div class="container">
	<%= form_with(model: profile, data: { controller: 'validate', validate_target: 'form' } ) do |form| %>
		<div class="form-group mb-2" >
			<%= form.label :first_name, class: 'form-label' %>
			<%= form.text_field :first_name, { class: 'form-control', data: {
                validate_target: 'input',
                action: "change->validate#handleChange",
                constrain: profile_constrains[:first_name] } } %>
			<%= feedback_for profile, :first_name%>
		</div>
		<div class="form-group mb-2" >
			<%= form.label :last_name, class: 'form-label' %>
			<%= form.text_field :last_name, { class: 'form-control', data: {
                validate_target: 'input',
                action: "change->validate#handleChange",
                constrain: profile_constrains[:last_name] } } %>
			<%= feedback_for profile, :last_name%>
		</div>
		<div class="form-group mb-2" >
			<%= form.label :age, class: 'form-label' %>
			<%= form.number_field :age, { class: 'form-control', data: {
                validate_target: 'input',
                action: "change->validate#handleChange",
                constrain: profile_constrains[:age] } } %>
			<%= feedback_for profile, :age %>
		</div>
		<div class="form-group">
			<%= form.submit %>
		</div>
	<% end %>
</div>
<%= console %>
